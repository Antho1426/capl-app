                        <TextView
                            android:id="@+id/text_view_digital_tiles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Digital tiles:"
                            android:textColor="@color/white"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >


                            <Space
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/fab_middle_tile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fabSize="normal"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                android:layout_margin="0dp"
                                app:srcCompat="@drawable/tile_template_middle_tile_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_go_forward"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_go_forward_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_go_backward"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_go_backward_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_turn_right"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_turn_right_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_turn_left"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_turn_left_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_turn_back"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_turn_back_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_start_repeat"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_start_repeat_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_end_repeat"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_end_repeat_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_two"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_two_icon"
                                />
                            <!--        app:srcCompat="@android:drawable/ic_dialog_email"-->

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_three"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_three_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_four"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_four_icon"
                                />
                            <!--        app:srcCompat="@android:drawable/ic_delete"-->

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_clear_last"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_clear_last_icon"
                                />

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tint="@android:color/white"
                                app:backgroundTint="@android:color/holo_blue_dark"
                                app:fabSize="mini"
                                android:id="@+id/fab_clear_all"
                                android:layout_margin="4dp"
                                app:srcCompat="@drawable/tile_template_clear_all_icon"
                                />


                        </LinearLayout>




    <!--                    <Space-->
    <!--                        android:layout_width="match_parent"-->
    <!--                        android:layout_height="100dp"-->
    <!--                        android:layout_weight="2.5" />-->


                        <ImageView
                            android:id="@+id/displayImageView"
                            android:layout_weight="2"
                            android:scaleType="fitCenter"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_gravity="center_horizontal" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4" />

                        <TextView
                            android:id="@+id/text_view_identified_commands"
                            android:textColor="@color/white"
                            android:layout_width="470dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Identified commands" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_weight="0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3" />



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_weight="0"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/current_executed_command_text_view"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white" />


                                <TextView
                                    android:id="@+id/number_of_for_loops_text_view"
                                    android:textColor="@color/white"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content" />


                                <TextView
                                    android:id="@+id/current_iteration_in_for_loops_text_view"
                                    android:textColor="@color/white"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content" />


                            </LinearLayout>


                            <Space
                                android:layout_width="20dp"
                                android:layout_height="0dp"
                                android:layout_weight="0" />


                            <ImageView
                                android:id="@+id/current_executed_command_image_view"
                                android:layout_width="100dp"
                                android:layout_height="100dp"/>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2" />

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4" />


                    </LinearLayout>



                    <Space
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />


                </GridLayout>

            </LinearLayout>

        </ScrollView>

    </HorizontalScrollView>


</LinearLayout>
