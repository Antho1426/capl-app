                        <!--                android:prompt="@string/sequence_example_prompt"-->

                                        <Button
                                            android:id="@+id/btn_validate"
                                            android:layout_width="75dp"
                                            android:layout_height="wrap_content"
                                            android:text="Validate"
                                            android:textSize="13dp"
                                            android:textAllCaps="false" />

                                        <Space
                                            android:layout_width="2.5dp"
                                            android:layout_height="1dp" />


                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>




                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">



                                <TextView
                                    android:id="@+id/number_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="20dp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/white"
                                    android:text="2." />

                                <Space
                                    android:layout_width="10dp"
                                    android:layout_height="0dp" />



                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal" >


                                    <Button
                                        android:id="@+id/btn_computer_vision"
                                        android:layout_width="155dp"
                                        android:layout_height="wrap_content"
                                        android:text="Identify tiles"
                                        android:textAllCaps="false" />




                                </LinearLayout>

                            </LinearLayout>





                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">



                                <TextView
                                    android:id="@+id/number_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="20dp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/white"
                                    android:text="3." />

                                <Space
                                    android:layout_width="10dp"
                                    android:layout_height="0dp" />



                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal" >






                                        <Button
                                            android:id="@+id/btn_send_commands"
                                            android:layout_width="155dp"
                                            android:layout_height="wrap_content"
                                            android:text="Send commands"
                                            android:textAllCaps="false" />

                                        <LinearLayout
                                                android:layout_width="155dp"
                                                android:layout_height="wrap_content"
                                                >

                                                <Button
                                                    android:id="@+id/btn_debug"
                                                    android:layout_width="77.5dp"
                                                    android:layout_height="wrap_content"
                                                    android:text="Debug"
                                                    android:textSize="7.5dp"
                                                    android:onClick="launchTilesProgramDebug"
                                                    android:textColor="#006400"
                                                    android:textAllCaps="false" />

                                                <Button
                                                    android:id="@+id/btn_stop"
                                                    android:layout_width="77.5dp"
                                                    android:layout_height="wrap_content"
                                                    android:text="STOP &amp; RESET"
                                                    android:textSize="7.5dp"
                                                    android:onClick="stopExecutionOfCommands"
                                                    android:textColor="@color/red"
                                                    android:textAllCaps="false" />


                                        </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>



                    <!--        <ProgressBar-->
                    <!--            android:id="@+id/progressBar"-->
